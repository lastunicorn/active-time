<UserControl
    x:Class="DustInTheWind.ActiveTime.Presentation.MainMenuArea.MainMenuView"
    x:ClassModifier="internal"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mainMenuArea="clr-namespace:DustInTheWind.ActiveTime.Presentation.MainMenuArea"

    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    d:DataContext="{d:DesignInstance mainMenuArea:MainMenuViewModel}">

    <Menu Height="Auto">

        <MenuItem Header="_File">
            <MenuItem Header="E_xit" Command="{Binding ExitCommand}" />
        </MenuItem>

        <MenuItem Header="_Recorder">
            <MenuItem Header="St_art" Command="{Binding StartCommand}" />
            <MenuItem Header="St_op" Command="{Binding StopCommand}" />
        </MenuItem>

        <MenuItem Header="_Help">
            <MenuItem Header="_About" Command="{Binding AboutCommand}" />
        </MenuItem>

    </Menu>

</UserControl>

