<Window
    x:Class="DustInTheWind.ActiveTime.Presentation.MainArea.Views.CalendarWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels1="clr-namespace:DustInTheWind.ActiveTime.Presentation.MainArea.ViewModels"

    mc:Ignorable="d"
    Title="CalendarWindow"
    Height="200"
    Width="200"
    d:DataContext="{d:DesignInstance viewModels1:CalendarViewModel}"
    WindowStyle="ToolWindow"
    ShowInTaskbar="False"
    ResizeMode="NoResize">

    <Viewbox
        Margin="3">

        <Calendar
            SelectedDate="{Binding Path=Date, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            GotMouseCapture="calendar_OnGotMouseCapture">
        </Calendar>

    </Viewbox>

</Window>
