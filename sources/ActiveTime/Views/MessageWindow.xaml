<Window
    x:Class="DustInTheWind.ActiveTime.Views.MessageWindow"
    x:ClassModifier="internal"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:DustInTheWind.ActiveTime.ViewModels"

    Title="Reminder"
    Height="300"
    Width="300"
    Topmost="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Loaded="MessageWindow_OnLoaded"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:MessageViewModel}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/WindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="WindowStyle"/>
    </Window.Style>

    <DockPanel>

        <Button
            DockPanel.Dock="Bottom"
            Content="Close"
            Margin="5"
            Click="buttonSnooze_Click"
            TabIndex="0" />

        <TextBlock
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            TextAlignment="Center"
            TextWrapping="Wrap"
            FontSize="20"
            Focusable="False"
            Padding="5"
            Text="{Binding Message}"/>

    </DockPanel>

</Window>
