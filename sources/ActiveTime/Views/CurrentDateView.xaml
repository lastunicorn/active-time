<UserControl
    x:Class="DustInTheWind.ActiveTime.Views.CurrentDateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:DustInTheWind.ActiveTime.ViewModels"
    
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    d:DataContext="{d:DesignInstance viewModels:CurrentDateViewModel }">

    <UserControl.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/DatePickerStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </UserControl.Resources>

    <StackPanel
        Orientation="Vertical"
        HorizontalAlignment="Center">

        <DatePicker
            Margin="0,0,0,5"
            HorizontalAlignment="Left"
            MinWidth="150"
            SelectedDate="{Binding Path=Date, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            SelectedDateFormat="Long"
            Padding="0"
            VerticalAlignment="Center"
            FontSize="18"/>

        <Button
            Content="..."
            Command="{Binding CalendarCommand}"
            Margin="0,5"
            MinHeight="40"/>

        <Grid
            HorizontalAlignment="Stretch"
            Margin="0,5,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Content="&lt;&lt;"
                Command="{Binding DecrementDayCommand}"
                MinHeight="40"/>

            <Button
                Grid.Column="1"
                Content="&gt;&gt;"
                Command="{Binding IncrementDayCommand}"
                MinHeight="40"/>
        </Grid>

    </StackPanel>

</UserControl>
