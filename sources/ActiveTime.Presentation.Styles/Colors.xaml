<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <!--
    ================================================================================================
    Primary Colors
    ================================================================================================
    -->

    <Color x:Key="PrimaryColor">#2D2D30</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />

    <Color x:Key="PrimaryDarkColor">#252526</Color>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />

    <Color x:Key="PrimaryDarkestColor">#202020</Color>
    <SolidColorBrush x:Key="PrimaryDarkestBrush" Color="{StaticResource PrimaryDarkestColor}" />

    <Color x:Key="PrimaryLightColor">#3F3F46</Color>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />

    <!--<Color x:Key="AccentColor">#00bc00</Color>-->
    <Color x:Key="AccentColor">#007acc</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />

    <!--
    ================================================================================================
    Font
    ================================================================================================
    -->

    <Color x:Key="FontPrimaryColor">#e6e6e6</Color>
    <SolidColorBrush x:Key="FontPrimaryBrush" Color="{StaticResource FontPrimaryColor}" />

    <Color x:Key="FontDimColor">Gray</Color>
    <SolidColorBrush x:Key="FontDimBrush" Color="{StaticResource FontDimColor}" />

    <Color x:Key="FontDisabledColor">#8F8F8F</Color>
    <SolidColorBrush x:Key="FontDisabledBrush" Color="{StaticResource FontDisabledColor}" />

    <Color x:Key="FontAccentColor">#F1F1F1</Color>
    <SolidColorBrush x:Key="FontAccentBrush" Color="{StaticResource FontAccentColor}" />

    <system:Double x:Key="DefaultFontSize">14</system:Double>

    <FontFamily x:Key="DefaultFontFamily">OpenSans</FontFamily>

    <!-- Main -->

    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="MainForeground" Color="{StaticResource FontPrimaryColor}"/>

    <!-- Button -->

    <SolidColorBrush x:Key="ButtonNormalBackgroundColor" Color="#3f3f46"/>
    <SolidColorBrush x:Key="ButtonNormalForegroundColor" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="ButtonNormalBorderColor" Color="#3f3f46"/>

    <SolidColorBrush x:Key="ButtonOverBackgroundColor" Color="#54545c"/>
    <SolidColorBrush x:Key="ButtonOverForegroundColor" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="ButtonOverBorderColor" Color="#54545c"/>

    <SolidColorBrush x:Key="ButtonPressedBackgroundColor" Color="#007acc"/>
    <SolidColorBrush x:Key="ButtonPressedForegroundColor" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="ButtonPressedBorderColor" Color="#007acc"/>

    <SolidColorBrush x:Key="ButtonDisabledBackgroundColor" Color="#252526"/>
    <SolidColorBrush x:Key="ButtonDisabledForegroundColor" Color="#536c5e"/>
    <SolidColorBrush x:Key="ButtonDisabledBorderColor" Color="#434346"/>

    <!-- CheckButton -->

    <!--<SolidColorBrush x:Key="ButtonCheckedBackgroundColor" Color="#ff9f4d"/>
    <SolidColorBrush x:Key="ButtonCheckedForegroundColor" Color="#ffffff"/>

    <SolidColorBrush x:Key="ButtonCheckedOverBackgroundColor" Color="#ff9f4d"/>
    <SolidColorBrush x:Key="ButtonCheckedOverForegroundColor" Color="#ffffff"/>-->

    <!-- CheckBox -->

    <SolidColorBrush x:Key="CheckBoxNormalBackgroundColor" Color="Transparent"/>
    <SolidColorBrush x:Key="CheckBoxNormalForegroundColor" Color="#e6e6e6"/>

    <SolidColorBrush x:Key="CheckBoxDisabledBackgroundColor" Color="Transparent"/>
    <SolidColorBrush x:Key="CheckBoxDisabledForegroundColor" Color="Gray"/>

    <SolidColorBrush x:Key="CheckBoxOverBackgroundColor" Color="#3f3f46"/>
    <SolidColorBrush x:Key="CheckBoxOverForegroundColor" Color="#e6e6e6"/>
    
    <!-- TextBox -->

    <SolidColorBrush x:Key="TextBoxNormalBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="TextBoxNormalForegroundColor" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="TextBoxNormalBorderColor" Color="#3f3f46"/>

    <SolidColorBrush x:Key="TextBoxOverBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="TextBoxOverForegroundColor" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="TextBoxOverBorderColor" Color="#6a6a75"/>

    <SolidColorBrush x:Key="TextBoxFocusBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="TextBoxFocusForegroundColor" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="TextBoxFocusBorderColor" Color="#3399ff"/>

    <SolidColorBrush x:Key="TextBoxFocusInactiveBackgroundColor" Color="#333337"/>
    <SolidColorBrush x:Key="TextBoxFocusInactiveForegroundColor" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="TextBoxFocusInactiveBorderColor" Color="#6a6a75"/>

    <!-- Status Bar -->

    <SolidColorBrush x:Key="StatusBarNormalBackground" Color="#007acc"/>
    <SolidColorBrush x:Key="StatusBarNormalForeground" Color="#e6e6e6"/>

    <SolidColorBrush x:Key="StatusBarOffBackground" Color="#CA5100"/>
    <SolidColorBrush x:Key="StatusBarOffForeground" Color="#e6e6e6"/>

    <!-- Icons -->

    <SolidColorBrush x:Key="IconNormalForeground" Color="#805400"/>

    <!-- Label -->

    <SolidColorBrush x:Key="LabelNormalBackgroundColor" Color="Transparent"/>
    <SolidColorBrush x:Key="LabelNormalForegroundColor" Color="#e6e6e6"/>

    <!-- DatePicker -->

    <SolidColorBrush x:Key="DatePickerNormalBackgroundColor" Color="Transparent"/>
    <SolidColorBrush x:Key="DatePickerNormalForegroundColor" Color="#e6e6e6"/>

    <!-- Menu -->

    <SolidColorBrush x:Key="MenuNormalBackgroundColor" Color="#2d2d30"/>

    <SolidColorBrush x:Key="MenuItemNormalBackgroundColor" Color="#2d2d30"/>
    <SolidColorBrush x:Key="MenuItemNormalForegroundColor" Color="#f1f1f1"/>
    <SolidColorBrush x:Key="MenuItemOverBackgroundColor" Color="#3e3e40"/>
    <SolidColorBrush x:Key="MenuItemOverForegroundColor" Color="#f1f1f1"/>
    <SolidColorBrush x:Key="MenuItemDisabledBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="MenuItemDisabledForeground" Color="#656565"/>
    
    <SolidColorBrush x:Key="SubmenuItemNormalBackground" Color="#1B1B1C"/>
    <SolidColorBrush x:Key="SubmenuItemOverBackground" Color="#333334"/>

    <SolidColorBrush x:Key="MenuSeparatorBorderBrush" Color="#333337"/>
    
    <SolidColorBrush x:Key="ArrowOpenedBackground" Color="#007ACC"/>

    <!-- ListBox -->

    <SolidColorBrush x:Key="ListBoxBackground" Color="#333337"/>
    <SolidColorBrush x:Key="ListBoxForeground" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="ListBoxBorder" Color="#3f3f46"/>
    <SolidColorBrush x:Key="ListBoxOverBorderColor" Color="#6a6a75"/>
    <SolidColorBrush x:Key="ListBoxFocusBorderColor" Color="#3399ff"/>

    <SolidColorBrush x:Key="ListBoxItemNormalColor" Color="Transparent"/>
    <SolidColorBrush x:Key="ListBoxItemOverColor" Color="#6a6a75"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedColor" Color="#3399ff"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedInactiveColor" Color="#3f3f46"/>

    <!-- Record Bar -->

    <SolidColorBrush x:Key="RecordBarActive" Color="#007acc"/>
    <SolidColorBrush x:Key="RecordBarInactive" Color="#CA5100"/>

</ResourceDictionary>