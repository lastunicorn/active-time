<Application
    x:Class="DustInTheWind.ActiveTime.Bootstrapper.App"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aboutArea="clr-namespace:DustInTheWind.ActiveTime.Presentation.AboutArea;assembly=DustInTheWind.ActiveTime.Presentation"
    xmlns:overviewArea="clr-namespace:DustInTheWind.ActiveTime.Presentation.OverviewArea;assembly=DustInTheWind.ActiveTime.Presentation"
    xmlns:views="clr-namespace:DustInTheWind.ActiveTime.Presentation.MainArea.Views;assembly=DustInTheWind.ActiveTime.Presentation"

    ShutdownMode="OnExplicitShutdown">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Pack://application:,,,/DustInTheWind.ActiveTime.Presentation.Styles;component/DarkSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type views:MainWindow}" BasedOn="{StaticResource WindowStyle}" />
            <Style TargetType="{x:Type aboutArea:AboutWindow}" BasedOn="{StaticResource WindowStyle}" />
            <Style TargetType="{x:Type views:CalendarWindow}" BasedOn="{StaticResource WindowStyle}" />
            <Style TargetType="{x:Type views:MessageWindow}" BasedOn="{StaticResource WindowStyle}" />
        </ResourceDictionary>
    </Application.Resources>

</Application>